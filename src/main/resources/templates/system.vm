#include("header.vm")

<!-- Page Content -->
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">System Dashboard</small> </h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Mining Stats
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>Plot</th>
                                <th>File Size (Gb)</th>
                                <th>Expected Size (Gb)</th>
                                <th>Shares</th>
                                <th>Times Mined</th>
                                <th>Times Interrupted</th>
                            </tr>
                            </thead>
                            <tbody>
                            #foreach($plot in $plots)
                            <tr>
                                <td>$plot.UUID</td>
                                <td>$plot.fileSizeGb</td>
                                <td>$plot.expectedFileSizeGb</td>
                                <td>$plot.sharesFound</td>
                                <td>$plot.timesChecked</td>
                                <td>$plot.timesIncomplete</td>
                            </tr>
                            #end
                            <tr>
                                <td>Totals</td>
                                <td>$totalSize</td>
                                <td>$totalExpected</td>
                                <td>$totalShares</td>
                                <td>$totalChecked</td>
                                <td>$totalInterrupted</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    #foreach($plot in $plots)

                    #end
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->

    </div>


</div>


#include("footer.vm")